<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigatonBarColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/textButton</item>
        <item name="android:elevation">6dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NormalTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="MenuTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blueIconColor</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/poppins</item>

    </style>

    <style name="EditTextNormal" parent="@style/Widget.AppCompat.EditText">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="hintTextColor">@color/hint_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:background">@drawable/white_background</item>
        <item name="android:textColor">@color/windowBackground</item>
    </style>

    <style name="ErrorEditText" parent="EditTextNormal">
        <item name="android:background">@drawable/error_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>