<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/rv_cv_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/min_separator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rv_iv_option"
                android:layout_width="@dimen/rv_iv_option"
                android:layout_height="@dimen/rv_iv_option"
                android:layout_marginTop="@dimen/rv_margin"
                android:layout_marginBottom="@dimen/rv_margin"
                android:layout_marginStart="@dimen/rv_margin"
                android:contentDescription=" "
                android:visibility="visible"
                tools:src="@drawable/ic_image_blue" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rv_layout_margin"
                android:layout_marginBottom="@dimen/rv_layout_margin"
                android:layout_marginEnd="@dimen/rv_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rv_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="Title"
                    style="@style/RVTitleStyle" />
                <TextView
                    android:id="@+id/rv_tv_subTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/min_separator"
                    android:layout_marginStart="@dimen/rv_margin"
                    tools:text="SubTitle here"
                    android:visibility="visible"
                    style="@style/MenuTextStyle"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
