<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginHomeScreenActivity">

    <LinearLayout
        android:id="@+id/ll_logo_login_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/logo_top_space"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include
            layout="@layout/sign_in_logo"/>
    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_top_separator"
        app:layout_constraintTop_toBottomOf="@id/ll_logo_login_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_emailPasswordAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_separator"
        android:text="@string/li_ingresaConCorreoTxt"
        android:textSize="@dimen/button_text_size"
        android:paddingStart="@dimen/button_padding_left_right"
        android:paddingEnd="@dimen/button_padding_left_right"
        android:contentDescription="@string/li_ingresaConCorreoTxt"
        android:drawableStart="@drawable/ic_mail"
        android:drawablePadding="@dimen/button_drawable_padding"
        style="@style/ButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/sign_in_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>